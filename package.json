{
  "name": "express-graceful-exit",
  "version": "1.0.0",
  "description": "Allow graceful exits for express apps, supporting zero downtime deploys",
  "keywords": [
    "express",
    "graceful",
    "exit",
    "shutdown",
    "clean",
    "tidy",
    "socket",
    "close",
    "SIGTERM",
    "STOPSIGNAL",
    "terminationGracePeriodSeconds",
    "server",
    "connection",
    "readiness",
    "liveness"
  ],
  "files": [
    "dist",
    "src",
    "package.json",
    "LICENSE",
    "!dist/examples",
    "!coverage/",
    "!*.tsbuildinfo"
  ],
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "clean": "tsc --build tsconfig.json --clean",
    "lint": "eslint ./ --ext .ts --ext .tsx",
    "lint-and-fix": "eslint ./ --ext .ts --ext .tsx --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emostar/express-graceful-exit"
  },
  "homepage": "https://github.com/emostar/express-graceful-exit",
  "author": "Jon Keating <jon@licq.org>",
  "contributors": [
    "Ivo Havener <ivolucien@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "base64id": "^2.0.0",
    "express": "^4.0.0",
    "underscore": "^1.12.1"
  },
  "peerDependencies": {
    "base64id": "^2.0.0",
    "express": "^4.0.0",
    "underscore": "^1.12.1"
  },
  "devDependencies": {
    "@types/base64id": "^2.0.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.0.0",
    "@types/node-fetch": "^2.5.12",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.4",
    "@types/sinon-chai": "^3.2.5",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^26.4.2",
    "nock": "^13.1.4",
    "node-fetch": "^2.5.0",
    "prettier": "^2.2.1",
    "rewire": "^6.0.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.5.5"
  }
}
